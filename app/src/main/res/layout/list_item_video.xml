<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_video_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@tools:sample/backgrounds/scenic" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_video_author"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_video_thumbnail"
        tools:background="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:maxLines="2"
        android:textColor="#797979"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/item_video_actions"
        app:layout_constraintStart_toEndOf="@id/item_video_author"
        app:layout_constraintTop_toBottomOf="@id/item_video_thumbnail"
        tools:text="AAAaaahhhhhhhhhhh" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_video_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/item_video_actions"
        app:layout_constraintStart_toEndOf="@id/item_video_author"
        app:layout_constraintTop_toBottomOf="@id/item_video_title"
        tools:text="Ahhhhhhhhhhh" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_video_actions"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/more_vert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_video_thumbnail" />

</androidx.constraintlayout.widget.ConstraintLayout>