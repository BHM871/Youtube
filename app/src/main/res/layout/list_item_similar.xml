<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingTop="5dp"
    android:paddingEnd="8dp"
    android:paddingBottom="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_similar_img_thumbnail"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/item_similar_txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:ellipsize="marquee"
        android:maxLines="3"
        android:textColor="?colorOnSecondary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/item_similar_img_more"
        app:layout_constraintStart_toEndOf="@id/item_similar_img_thumbnail"
        app:layout_constraintTop_toTopOf="@id/item_similar_img_thumbnail"
        tools:text="AAAAAAAAAAHHHHHHHHHHHHH" />

    <TextView
        android:id="@+id/item_similar_txt_channel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="marquee"
        android:maxLines="3"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/item_similar_img_more"
        app:layout_constraintStart_toEndOf="@id/item_similar_img_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/item_similar_txt_title"
        tools:text="AAAAAAAaaaahhhhhhh" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_similar_img_more"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_more_vert_blacked_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>